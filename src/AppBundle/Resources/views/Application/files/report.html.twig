{#Report Block#}
{% if documents['report'] is defined %}
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-user"></i> {{ 'application.new.report'|trans }}</h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            {% for document in documents['report'] %}
                {% if document.type == 'report' %}
                    <li class="list-group-item">
                        <i class="fa fa-file alert-info"></i>
                        <a href="{{ vich_uploader_asset(document, 'file') }}" target="_blank" class="unvisited-blue hidden-print">
                            {{ ('application.file_uploads.type.'~document.type)|trans }} ({{ document.fileName }})
                        </a>
                        {% include 'AppBundle:Application:files/remove_document_button.html.twig' %}
                        {% include 'AppBundle:Application:files/show_who_upload.html.twig' %}
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% else %}
    {% if is_granted('report-upload', app.user) %}
        {% if application.isPaid%}
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-user"></i> {{ 'application.new.report'|trans }}</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        {{ form_row(form.report) }}
                    </li>
                </ul>
            </div>
        {% endif %}
    {% endif %}
{% endif %}