{% extends "AppBundle::layout.html.twig" %}

{% block content %}
  <div class="page-header">
    <h1>{{ 'audit.index.title'|trans }}</h1>
  </div>

  {% include 'AppBundle::flashes.html.twig' %}

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-th-large"></i> {{ 'audit.index.title'|trans }}</h3>
    </div>
    <div class="rows-to-columns">
    <table class="table audit-table">
      <thead>
        <tr role="row" class="filter">
          <td colspan="4">
            <div class="row">
              <div class="col-md-6"></div>
              <div class="col-md-3">
                {{ filter_select(logs, "blamed", users) }}
              </div>
              <div class="col-md-3">
                {{ filter_select(logs, "class", sourceClasses) }}
              </div>
            </div>
          </td>
        </tr>
      </thead>
      <tbody>
        {% for log in logs %}
          {{ audit(log) }}
        {% endfor %}
      </tbody>
    </table>
    </div>
    <div class="panel-footer">
      {{ pagination(logs) }}
    </div>
  </div>
{% endblock %}
