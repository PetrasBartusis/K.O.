{% extends 'AppBundle::layout.html.twig' %}

{% set title = "licences.new.title"|trans %}

{% block content %}

  <div class="page-header">
    <h1>{{ title }}</h1>
  </div>

  {% include 'AppBundle::flashes.html.twig' %}

  {{ form_start(form, {action: path('app_licences_new', {id: id})}) }}
    {{ form_row(form.type) }}
    {{ form_rest(form) }}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <button type="submit" class="btn btn-primary">{{ 'button.next_step'|trans }}</button>
      </div>
    </div>
  {{ form_end(form) }}

{% endblock %}
