{% if licence.membershipLicence %}
  <div class="row">
    <div class="col-md-6">
      {{ form_row(form.fullName) }}
      {{ form_row(form.bank) }}
      {{ form_row(form.bankAccount) }}
      {{ form_row(form.personalCode) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.memberName) }}
      {{ form_row(form.memberCode) }}
      {{ form_row(form.vatCode) }}
      {{ form_row(form.address) }}
      {{ form_row(form.phone) }}
    </div>
  </div>
{% endif %}

{% if licence.declarantLicence %}
  <div class="row">
    <div class="col-md-6">
      {{ form_row(form.teamName) }}
      {{ form_row(form.vatNumber) }}
      {{ form_row(form.mobileNumber) }}
      {{ form_row(form.email) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.lasfName) }}
      {{ form_row(form.lasfAddress) }}
      {{ form_row(form.managerFullName) }}
      {{ form_row(form.personalCode) }}
    </div>
  </div>
    <div class="col-md-12">
        <div class="row">
            {{ form_row(form.city) }}
        </div>
    </div>
{% endif %}

{% if licence.driverLicence %}
  <div class="row">
    <div class="col-md-6">
      {{ form_row(form.licence) }}
      {{ form_row(form.date) }}
      {{ form_row(form.email) }}
      {{ form_row(form.mobileNumber) }}
      {% if licence.lasfInsurance %}
          {{ form_row(form.identityCode) }}
      {% endif %}
      {{ form_row(form.city) }}
      {{ form_row(form.languages, {attr: {class: 'select2'}}) }}
      <div id="secondary-language" {% if form.languages.vars.value != 'Other' %} style="display: none;" {% endif %}>
          {{ form_row(form.secondaryLanguage) }}
      </div>
    </div>
    <div class="col-md-6">
      {{ form_row(form.lasfName) }}
      {{ form_row(form.lasfAddress) }}
      {{ form_row(form.personalCode) }}
      {{ form_row(form.gender) }}
      {{ form_row(form.sports, {attr: {class: 'select2'}}) }}
        <div class="col-md-6" style="margin-top: 20px">
            {{ form_row(form.firstDriver) }}
        </div>
        <div class="col-md-6" style="margin-top: 20px">
            {{ form_row(form.secondDriver) }}
        </div>
    </div>
  </div>
{% endif %}

{% if licence.type == constant('AppBundle\\Entity\\Licence::TYPE_ORGANISATOR') %}
  <div class="row">
    <div class="col-md-6">
      {{ form_row(form.name) }}
      {{ form_row(form.date) }}
      {{ form_row(form.managerFullName) }}
      {{ form_row(form.email) }}
      {{ form_row(form.mobileNumber) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.lasfAddress) }}
      {{ form_row(form.lasfName) }}
      {{ form_row(form.phone) }}
      {{ form_row(form.vatNumber) }}
      {{ form_row(form.bank) }}
      {{ form_row(form.bankAccount) }}
    </div>
  </div>
{% endif %}

{% if licence.judgeLicence %}
  <div class="row">
    <div class="col-md-6">
      {{ form_row(form.declarant) }}
      {{ form_row(form.lasfAddress) }}
      {{ form_row(form.city) }}
      {{ form_row(form.mobileNumber) }}
        {% if licence.lasfInsurance %}
            {{ form_row(form.identityCode) }}
        {% endif %}
      {{ form_row(form.languages, {attr: {class: 'select2'}}) }}
      <div id="secondary-language" {% if form.languages.vars.value != 'Other' %} style="display: none;" {% endif %}>
          {{ form_row(form.secondaryLanguage) }}
      </div>
    </div>
    <div class="col-md-6">
      {{ form_row(form.name) }}
      {{ form_row(form.date) }}
      {{ form_row(form.email) }}
      {{ form_row(form.city) }}
      {{ form_row(form.gender) }}
    </div>
    <div class="col-md-12">
      {{ form_row(form.sports, {attr: {class: 'select2'}}) }}
    </div>
  </div>
{% endif %}
