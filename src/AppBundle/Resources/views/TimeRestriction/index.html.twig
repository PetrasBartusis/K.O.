{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'time_restriction.index.title'|trans }}
            {{ back_button('app_application_index') }}
        </h1>
        <div class="clearfix"></div>
    </div>

    {% include 'AppBundle::flashes.html.twig' %}

    {{ form_start(form) }}

    {% for time in times %}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-file"></i> {{ 'time_restriction.index.title'|trans }}</h3>
            </div>
            <table class="table table-striped table-hover table-condensed table-responsive times-restriction">
                <thead>
                <tr>
                    <th>
                        {{ 'time_restriction.label.purpose'|trans }}
                    </th>
                    <th>
                        {{ 'time_restriction.label.date_to_competition'|trans }}
                    </th>
                    <th>
                        {{ 'time_restriction.label.time_in_days'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SECRETARY') %} class="legal-role" {% else %} style="display: none" {% endif %}>
                <tr>
                    <td>
                        {{ 'time_restriction.label.pay_taxes_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.isPayTaxesTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.payTaxesTerm) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ 'time_restriction.label.additional_rules_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.isAdditionalRulesTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.additionalRulesTerm) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ 'time_restriction.label.additional_rules_confirmation_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.isAdditionalRulesConfirmationTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.additionalRulesConfirmationTerm) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ 'time_restriction.label.final_rules_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.isFinalRulesTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.finalRulesTerm) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ 'time_restriction.label.contact_administrator_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.isContactAdministrationTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.contactAdministrationTerm) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ 'time_restriction.label.track_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.isTrackActTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.trackActTerm) }}
                    </td>
                </tr>
                </tbody>
                <tbody>
                <tr>
                    <td>
                        {{ 'time_restriction.label.additional_rules_agreement_term'|trans }}
                    </td>
                    <td>
                        {{ form_row(form.IsSafetyPlanTerm) }}
                    </td>
                    <td>
                        {{ form_row(form.safetyPlanTerm) }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endfor %}
    <button type="submit" class="btn btn-primary">{{ 'button.submit'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
