{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
  <div class="page-header">
    <h1>{{ 'competition.edit.title'|trans }}</h1>
  </div>

  {% include 'AppBundle::flashes.html.twig' %}

  {{ form_errors(form) }}
  {{ form_start(form) }}
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">{{ entity.name }}</h3>
    </div>
    <div class="panel-body">
      {{ form_rest(form) }}
    </div>
    <div class="panel-footer text-center">
      <button type="submit" class="btn btn-primary">{{ 'button.save'|trans }}</button>
      <a href="{{ url('app_competition_index') }}" class="btn btn-default">{{ 'button.cancel'|trans }}</a>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
